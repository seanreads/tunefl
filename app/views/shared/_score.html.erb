<% if score %>
  <% title      ||= score.title %>
  <% composer   ||= score.composer %>
  <% copyright  ||= score.copyright %>
  <% music      ||= score.music %>
  <% preview    ||= score.preview.url %>
  <% midi       ||= score.midi.url %>
<% end %>

<div class='score'>
  <% if title %>
    <h1 class='title'><%= title %></h1>
  <% end %>
  
  <% if composer %>
    <h4 class='composer'><%= composer %></h4>
  <% end %>
  
  <%= image_tag(preview) %>
  
  <% if copyright %>
    <p class='copyright'><%= copyright %></p>
  <% end %>
  
  <p class='music'><%= music %></p>
  
  <% if midi %>
    <p class='links'><%= link_to(t('activerecord.attributes.score.midi'), midi) %></p>
  <% end %>
</div>

